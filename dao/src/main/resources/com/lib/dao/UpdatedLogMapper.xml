<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lib.dao.UpdatedLogMapper">
    <resultMap id="BaseResultMap" type="com.lib.model.UpdateLog">
        <id property="logId" column="log_id" jdbcType="BIGINT"/>
        <result property="dataClass" column="class_name" jdbcType="VARCHAR"/>
        <result property="dataId" column="data_id" jdbcType="INTEGER"/>
        <result property="oldData" column="parameter" jdbcType="VARCHAR"/>
        <result property="newData" column="return_value" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="createBy" column="create_by" jdbcType="INTEGER"/>
    </resultMap>
    <insert id="create" parameterType="com.lib.model.Parameter" keyProperty="uLog.logId" keyColumn="log_id"
            useGeneratedKeys="true">
        insert into update_log(data_class, data_id, old_data, new_data, elapsed_time, create_time, create_by)
        values (#{uLog.dataClass}, #{uLog.dataId}, #{uLog.oldData}, #{uLog.newData}, #{uLog.elapsedTime}, NOW(),
        #{uLog.createBy})
    </insert>
    <update id="update">
        update update_log u
        <set>
            <if test="uLog.oldData != null and uLog.oldData != ''">
                u.old_data = #{uLog.oldData},
            </if>
            <if test="uLog.elapsedTime != null">
                u.elapsed_time = #{uLog.elapsedTime},
            </if>
        </set>
        where log_id = #{uLog.logId}
    </update>

    <select id="getBy" resultMap="BaseResultMap">
    </select>

    <select id="getById" resultMap="BaseResultMap">
    </select>

    <delete id="delete">
    </delete>

    <select id="getByUpdate" resultMap="BaseResultMap">
    </select>
</mapper>